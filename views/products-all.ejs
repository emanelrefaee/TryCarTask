<h2 class="mt-3 mb-3">Our Products</h2>
<div class="row">
    <% for(var p of products) { %>
        <div class="col-md-3 mr-2 ">
           <div class="card" style="width: 18rem;">
               <img src="<%=p.image %>" class="card-img-top" alt="..." style=" height: 200px;">
               <div class="card-body">
                 <h5 class="card-title"><%= p.product_name %></h5>
                 <p class="card-text"><%= p.description %></p>
                 <a href="#" class="btn btn-primary">details</a>
               </div>
             </div>
       </div>
       <% } %>
</div>

<h2 class="mt-5">Our Products </h2>
<div class="row">
<table class="table table-striped">
            <thead>
                <tr>
                  <th>Product Name</th>
                  <th>Product Code</th>
                  <th>Price</th>
                  <th>Category</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% for(var p of products) { %>
                <tr>
                  <td>
                    <%= p.product_name %>
                  </td>
                  <td>
                    <%= p.product_code %>
                  </td>
                  <td>
                    <%= p.actual_price %> KWD
                  </td>
                  <td>
                    <%= p.category_name %>
                  </td>
                  <td>
                      <a href="/products/edit/<%= p.product_id %>" class="btn btn-outline-primary btn-sm" >Edit</a> | 
                      <a href="/products/delete" class="btn btn-outline-danger btn-sm">Delete</a>
                  </td>
                </tr>
                <%  } %>
              </tbody>
          </table>
        </div>